<h1>Blood Drives</h1>

<h2>Today</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Location</th>
      <th>Date</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @current_drives.each do |blood_drive| %>
      <tr>
        <td><%= blood_drive.location %></td>
        <td><%= formatted_date(blood_drive.date) %></td>
        <td><%= link_to 'Show', blood_drive %></td>
        <td><%= link_to 'Edit', edit_blood_drife_path(blood_drive) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
