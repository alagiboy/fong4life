<% content_for :header do %>
  <h1>Emergencies</h1>
  <% breadcrumb :emergencies %>
<% end %>

<div class=" header-btn pull-right">
    <div class="btn btn-danger">
     <i class='glyphicon glyphicon-plus-sign'></i> <%= link_to 'New Emergency', new_emergency_path  %>
    </div>
        
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th class="hidden-xs">Date</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @emergencies.sort { |x,y| y.created_at <=> x.created_at }.each do |emergency| %>
      <tr>
        <td><%= link_to emergency.title, emergency  %></td>
        <td><%= emergency.created_by  %></td>
        <td class="hidden-xs"><%= formatted_date(emergency.created_at) %></td>
        <td><%= emergency.status.try(:capitalize) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>