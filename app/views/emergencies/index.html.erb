<nav class="navbar navbar-default navbar-fixed-top" id="nav-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-4 col-sm-6 ">
        <h1>Emergencies</h1>
      </div>
      <div class="col-xs-4 col-sm-6 header-btn">
        <%= link_to 'New Emergency', new_emergency_path, class: 'btn btn-danger'  %>
      </div>
    </div>
  </div>
</nav>
<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="alert-message">
  <%= flash[:notice]%>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th class="hidden-xs">Date</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @emergencies.sort { |x,y| y.created_at <=> x.created_at }.each do |emergency| %>
      <tr>
        <td><%= link_to emergency.title, emergency  %></td>
        <td><%= emergency.created_by  %></td>
        <td class="hidden-xs"><%= formatted_date(emergency.created_at) %></td>
        <td><%= emergency.status.capitalize %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>